@page "/fetchdata"

<PageTitle>Ocupaciones</PageTitle>

<h1>Ocupaciones</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (ocupaciones == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripción</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ocupacion in ocupaciones)
            {
                <tr>
                    <td>@ocupacion.OcupacionID</td>
                    <td>@ocupacion.Descripcion</td>
                    <td>@ocupacion.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public List<Ocupacion>? ocupaciones;

    protected override async Task OnInitializedAsync()
    {

        Contexto contexto = new Contexto();

        ocupaciones = contexto.Ocupaciones.ToList();
    }
}
